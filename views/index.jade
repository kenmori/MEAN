extends layout

block content
  h1= title
  p Welcome to #{title}
  p#msg #{msg}

  ul
    li
      a(href='/add') add list
    li
      a(href='/find') fined list
  table(border='1')
    tr
      th id
      th name
      th mail
      th tel
      each data in datas
        tr
            td
                a(href='/edit/#{data.id}') #{data.id}
            td= data.name
            td= data.mail
            td= data.tel
            td
                a(href='/delete/#{data.id}') 削除
